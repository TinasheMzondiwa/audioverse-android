<resources>

    <style name="Theme.AudioVerse.AppBar" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">
        <item name="colorPrimary">@color/background</item>
    </style>

    <style name="Theme.AudioVerse.Toolbar" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/sans_bold</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Theme.AudioVerse.Tab" parent="@style/TextAppearance.MaterialComponents.Tab">
        <item name="android:fontFamily">@font/sans_bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="expanded" parent="@style/TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:fontFamily">@font/sans_bold</item>
        <item name="android:lines">2</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="Theme.AudioVerse.PopupMenu.Large" parent="@style/TextAppearance.AppCompat.Widget.PopupMenu.Large">
        <item name="android:fontFamily">@font/sans_regular</item>
    </style>

    <style name="Theme.AudioVerse.PopupMenu.Small" parent="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small">
        <item name="android:fontFamily">@font/sans_regular</item>
    </style>

    <style name="TextAppearance.IOSched.FadingSnackbarAction" parent="@style/TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/teal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/sans_regular</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
