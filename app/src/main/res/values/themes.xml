<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">@color/theme</item>
        <item name="colorPrimary">@color/theme</item>
        <item name="colorPrimaryDark">@color/dividers</item>
        <item name="android:navigationBarColor">@color/theme</item>
        <item name="android:textColorPrimary">@color/text</item>
        <item name="android:textColorSecondary">@color/secondary</item>
        <item name="android:textAppearanceLargePopupMenu">@style/Theme.AudioVerse.PopupMenu.Large
        </item>
        <item name="android:textAppearanceSmallPopupMenu">@style/Theme.AudioVerse.PopupMenu.Small
        </item>
    </style>

    <style name="Theme.AudioVerse" parent="BaseTheme" />

    <style name="Theme.AudioVerse.Detail">
        <item name="android:navigationBarColor">?android:windowBackground</item>
        <item name="android:navigationBarDividerColor">@color/dividers</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

</resources>